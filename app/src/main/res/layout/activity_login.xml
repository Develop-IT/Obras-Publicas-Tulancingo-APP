<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Login">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_fin2"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obras Publicas Tulancingo"
        android:textColor="#424242"
        android:textSize="18dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_title"
        android:gravity="center" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/button"
        android:layout_below="@+id/tv_title"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_alignStart="@+id/tv_title"
        android:layout_alignRight="@+id/btn_registrer"
        android:layout_alignEnd="@+id/btn_registrer"
        android:layout_marginTop="15dp">
    <EditText
        android:id="@+id/edt_user"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:hint="Correo Electronico"
        android:inputType="textAutoComplete"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="#424242"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#424242"
        android:textSize="12dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_alignRight="@+id/btn_registrer"
        android:layout_alignEnd="@+id/btn_registrer">
        <EditText
            android:id="@+id/edt_password"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="ContraseÃ±a"
            android:imeActionId="@+id/login"
            android:imeActionLabel="Cola"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="#424242"
            android:layout_below="@+id/edt_user"
            android:layout_alignLeft="@+id/edt_user"
            android:layout_alignStart="@+id/edt_user"
            android:layout_marginTop="20dp"
            android:textColor="#424242"
            android:textSize="12dp" />

            </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:text="Entrar"
        android:id="@+id/btn_entrar"
        android:background="#18bc6a"
        android:textColor="#ffffff"
        android:layout_gravity="left"
        android:elevation="10dp"
        android:onClick="entrar"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="30dp"
        android:textSize="13dp" />

    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:text="Registrarse"
        android:id="@+id/btn_registrer"
        android:background="#18bc6a"
        android:textColor="#ffffff"
        android:layout_gravity="left"
        android:elevation="10dp"
        android:layout_alignTop="@+id/btn_entrar"
        android:layout_alignRight="@+id/tv_title"
        android:layout_alignEnd="@+id/tv_title"
        android:textSize="13dp"
        android:onClick="newuser" />



</RelativeLayout>
